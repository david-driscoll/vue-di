{
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "src/**/*.js": {
            "when": "$(basename).ts"
        },
        "test/**/*.js": {
            "when": "$(basename).ts"
        }
    },
    "typescript.tsdk": "./node_modules/typescript/lib"
}
